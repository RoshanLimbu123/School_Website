@model CMS.Web.ViewModels.TeacherCategoryViewModel
@{
    ViewData["Title"] = "Our Teachers";
}



<section class="page-title-section " data-overlay-dark="7" style="background-image: url(https://64.media.tumblr.com/c9e620b709e7d2b0d929665a7b1380fd/1c601eb4962b2321-4e/s500x750/05025ea8e680e655acdaeb37d7b392d0f1c83103.gifv)">
    <div class="container">

        <div class="row">
            <div class="col-md-7 col-sm-12 " style="height:120px;">
                <h1 class="text-white mt-4">Teachers</h1>
            </div>
            <div class="col-md-5 col-sm-12 text-white">
                <ul class="text-right xs-text-left sm-margin-8px-top xs-margin-5px-top mt-4" style="list-style:none">
                    <li><a href="/" class="text-white d-inline-block text-decoration-none">Home <i class="fa fa-chevron-right"></i></a></li>
                    <li><a href="#" class="text-white d-inline-block text-decoration-none">Teachers</a></li>
                </ul>
            </div>
        </div>

    </div>
</section>

<br />
<section>
    <div class="container">
        <div class="row">
            @foreach (var teacher in Model.teachers)
            {
                var imgSrc = "/images/";
                if (string.IsNullOrWhiteSpace(teacher.file_name))
                {
                    imgSrc = "/img/gallery.jpg";
                }
                else
                {
                    imgSrc += "custom/" + teacher.file_name;
                }

                <div class="col-lg-4 col-md-6 mb-4">

                    <div class="blog shadow rounded">
                        <!-- Blog image -->
                        <div class="blog-image">
                            <img class="img-fluid border-radius" src="@imgSrc" alt="@teacher.name" style="max-height:300px;">
                        </div>
                        <!-- Blog content -->
                        <div class="blog-content pt-4 p-2">
                            <h5 class="blog-title mb-3"><a href="#">@teacher.name.ToUpper()</a></h5>
                            <div class="blog-meta mb-0">
                                <ul class="list-unstyled mb-0 d-flex">
                                    <li class="mr-3"><a href="blog_3.html#"><i class="fas fa-calendar-alt pr-1"></i> 15 Oct, 2020</a></li>
                                    <li><a href="blog_3.html#"><i class="fas fa-clock pr-1"></i>  8:00 AM - 5:00 PM</a></li>
                                </ul>
                            </div>
                            <text class="mt-3">
                                @if (System.Web.HttpUtility.HtmlDecode(teacher.description).Length > 150)
                                {
                                    <text>@Html.Raw(System.Web.HttpUtility.HtmlDecode(teacher.description).Substring(0, 150))</text>
                                }
                                else
                                {
                                    <text>@Html.Raw(System.Web.HttpUtility.HtmlDecode(teacher.description))</text>
                                }
                        </div>
                    </div>
                </div>
            }
        </div>
            </div>
</section>
