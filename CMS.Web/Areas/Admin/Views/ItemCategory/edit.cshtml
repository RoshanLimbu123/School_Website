@model CMS.Core.Dto.ItemCategoryDto
@{
    ViewData["Title"] = "Update Item Category";
}

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li>
            Update item category
        </li>
    </ul>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <div class="widget radius-bordered">
                        <div class="widget-header">
                            <span class="widget-caption">UPDATE item category</span>
                        </div>
                        <div class="widget-body">
                            <form class="form-horizontal" method="post" enctype="multipart/form-data" action="/admin/item-category/edit">

                                @Html.ValidationSummary(true)

                                @Html.AntiForgeryToken()

                                @Html.HiddenFor(a => a.item_category_id)

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.name, new { @class = "col-md-3 control-label" })

                                    <div class="col-md-9">
                                        @Html.TextBoxFor(a => a.name, new { @class = "form-control" })

                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.name)</p>
                                </div>

                               
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.description, new { @class = "col-md-3 control-label" })

                                    <div class="col-md-9">
                                        @Html.TextAreaFor(a => a.description, new { @class = "form-control" })
                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.description)</p>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input class="btn btn-palegreen pull-right" type="submit" value="Update" style="background-color:#2dc3e8" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

             
            </div>
        </div>
    </div>
</div>